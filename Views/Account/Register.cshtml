@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="auth-card">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3">Kayıt Ol</h2>
                        <p class="text-muted">Ücretsiz hesap oluşturun ve oyuna başlayın</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Register" method="post" class="auth-form">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="userName" name="userName" placeholder="Kullanıcı Adı" required />
                            <label for="userName">
                                <i class="fas fa-user me-2"></i>Kullanıcı Adı
                            </label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="E-posta" required />
                            <label for="email">
                                <i class="fas fa-envelope me-2"></i>E-posta
                            </label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" required />
                            <label for="password">
                                <i class="fas fa-lock me-2"></i>Şifre
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Kayıt Ol
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Zaten hesabınız var mı? 
                            <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                            </a>
                        </p>
                    </div>

                    <div class="auth-features mt-4">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="feature-item">
                                    <i class="fas fa-gift text-success"></i>
                                    <small>Ücretsiz</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="feature-item">
                                    <i class="fas fa-users text-warning"></i>
                                    <small>Sosyal</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="feature-item">
                                    <i class="fas fa-gamepad text-info"></i>
                                    <small>Eğlenceli</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 