@{
    ViewBag.Title = "Oyun Kur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-gamepad me-2"></i>Yeni Oyun Kur
                    </h3>
                    <p class="mb-0 mt-2 opacity-75">Arkadaşlarınızla birlikte oynamak için oda oluşturun</p>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-section mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Nasıl Çalışır?
                                </h5>
                                <div class="info-steps">
                                    <div class="info-step d-flex align-items-start mb-3">
                                        <div class="step-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-plus"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Oda Oluşturun</h6>
                                            <p class="text-muted mb-0 small">Özel oda kodunuz otomatik oluşturulacak</p>
                                        </div>
                                    </div>
                                    <div class="info-step d-flex align-items-start mb-3">
                                        <div class="step-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-share"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Kodu Paylaşın</h6>
                                            <p class="text-muted mb-0 small">Arkadaşlarınızla oda kodunu paylaşın</p>
                                        </div>
                                    </div>
                                    <div class="info-step d-flex align-items-start">
                                        <div class="step-icon bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-play"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Oyunu Başlatın</h6>
                                            <p class="text-muted mb-0 small">Herkes katıldığında oyunu başlatın</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="create-form">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-cog me-2"></i>Oda Ayarları
                                </h5>
                                
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        @ViewBag.Error
                                    </div>
                                }

                                <form method="post" asp-action="CreateRoom" id="createForm">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-users me-2"></i>Maksimum Oyuncu Sayısı
                                        </label>
                                        <select class="form-select" name="maxPlayers">
                                            <option value="4">4 Oyuncu</option>
                                            <option value="5">5 Oyuncu</option>
                                            <option value="6" selected>6 Oyuncu</option>
                                            <option value="7">7 Oyuncu</option>
                                            <option value="8">8 Oyuncu</option>
                                        </select>
                                        <div class="form-text">Daha fazla oyuncu = daha zorlu oyun!</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-clock me-2"></i>Oyun Süresi
                                        </label>
                                        <select class="form-select" name="gameDuration">
                                            <option value="300">5 Dakika (Hızlı)</option>
                                            <option value="480" selected>8 Dakika (Standart)</option>
                                            <option value="600">10 Dakika (Uzun)</option>
                                            <option value="900">15 Dakika (Çok Uzun)</option>
                                        </select>
                                        <div class="form-text">Casusu bulmak için yeterli süre</div>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label">
                                            <i class="fas fa-eye me-2"></i>Oda Görünürlüğü
                                        </label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="roomVisibility" id="public" value="public" checked>
                                            <label class="form-check-label" for="public">
                                                <i class="fas fa-globe text-success me-2"></i>Herkese Açık
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="roomVisibility" id="private" value="private">
                                            <label class="form-check-label" for="private">
                                                <i class="fas fa-lock text-warning me-2"></i>Özel (Sadece Kod ile)
                                            </label>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-plus me-2"></i>Oda Oluştur
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4 border-0 bg-light">
                <div class="card-body p-4">
                    <h5 class="text-center mb-3">
                        <i class="fas fa-lightbulb text-warning me-2"></i>İpuçları
                    </h5>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div class="tip-item">
                                <i class="fas fa-users text-primary fs-3 mb-2"></i>
                                <h6>En İyi Deneyim</h6>
                                <p class="text-muted small">4-6 oyuncu ile oynayın</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="tip-item">
                                <i class="fas fa-clock text-success fs-3 mb-2"></i>
                                <h6>Optimal Süre</h6>
                                <p class="text-muted small">8 dakika ideal süredir</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="tip-item">
                                <i class="fas fa-shield-alt text-info fs-3 mb-2"></i>
                                <h6>Güvenli Oyun</h6>
                                <p class="text-muted small">Özel odalar daha güvenlidir</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.step-icon {
    font-size: 12px;
}

.info-step:hover .step-icon {
    transform: scale(1.1);
    transition: transform 0.2s ease;
}

.tip-item {
    transition: transform 0.3s ease;
}

.tip-item:hover {
    transform: translateY(-5px);
}

.form-select:focus,
.form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}

.btn-primary {
    background: linear-gradient(45deg, #0d6efd, #0b5ed7);
    border: none;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(13, 110, 253, 0.3);
}
</style> 