@{
    ViewBag.Title = "Rolünü Gör";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = ViewBag.Role as casus_oyunu.Models.PlayerRole;
    var room = ViewBag.Room as casus_oyunu.Models.GameRoom;
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="spy-bg p-4 rounded shadow-sm text-center">
                <h2 class="spy-title mb-3">Rolün</h2>
                @if (role != null)
                {
                    @if (role.IsSpy)
                    {
                        <div class="alert alert-danger display-4">Sen <strong>CASUS</strong>'sun!</div>
                        <div class="mt-3">Diğer oyuncuların ortak kelimesini bulmaya çalış!</div>
                    }
                    else
                    {
                        <div class="alert alert-success display-4">Kelimen: <strong>@role.AssignedWord</strong></div>
                        <div class="mt-3">Casusu bulmaya çalış!</div>
                    }
                }
                <a href="@Url.Action("Lobby", "Room", new { code = room.RoomCode })" class="btn btn-secondary mt-4">Lobiye Dön</a>
            </div>
        </div>
    </div>
</div> 