@{
    ViewBag.Title = "Oyuna Katıl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-sign-in-alt me-2"></i>Oyuna Katıl
                    </h3>
                    <p class="mb-0 mt-2 opacity-75">Arkadaşınızın oyununa katılmak için oda kodunu girin</p>
                </div>
                <div class="card-body p-4">
                    <div class="row">
        <div class="col-md-6">
                            <div class="join-form">
                                <h5 class="text-success mb-3">
                                    <i class="fas fa-key me-2"></i>Oda Kodu
                                </h5>
                                
                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        @TempData["Error"]
                                    </div>
                                }

                                <form method="post" asp-action="JoinRoom" id="joinForm">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="mb-3">
                                        <label for="roomCode" class="form-label">
                                            <i class="fas fa-hashtag me-2"></i>Oda Kodu
                                        </label>
                                        <input type="text" 
                                               class="form-control form-control-lg text-center" 
                                               id="roomCode" 
                                               name="roomCode" 
                                               value="@ViewBag.RoomCode"
                                               maxlength="6" 
                                               placeholder="ABC123"
                                               required 
                                               autocomplete="off"
                                               style="font-size: 1.5rem; letter-spacing: 0.5rem; font-weight: bold;">
                                        <div class="form-text">
                                            <i class="fas fa-info-circle me-1"></i>
                                            6 karakterlik oda kodunu girin
                                        </div>
                                    </div>

                                    <!-- Katılım Seçenekleri -->
                                    <div class="mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-user me-2"></i>Katılım Yöntemi
                                        </label>
                                        <div class="join-options">
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio" name="joinMethod" id="guestJoin" value="guest" checked>
                                                <label class="form-check-label" for="guestJoin">
                                                    <i class="fas fa-user-clock me-2"></i>Misafir Olarak Katıl
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="joinMethod" id="accountJoin" value="account">
                                                <label class="form-check-label" for="accountJoin">
                                                    <i class="fas fa-user-plus me-2"></i>Hesap Oluştur ve Katıl
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Misafir Katılım -->
                                    <div id="guestSection">
                                        <div class="mb-3">
                                            <label for="playerName" class="form-label">
                                                <i class="fas fa-user me-2"></i>Oyuncu Adınız
                                            </label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="playerName" 
                                                   name="playerName" 
                                                   placeholder="Oyuncu adınızı girin"
                                                   required>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Bu isim oyunda görünecek
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Hesap Oluşturma -->
                                    <div id="accountSection" style="display: none;">
                                        <div class="mb-3">
                                            <label for="userName" class="form-label">
                                                <i class="fas fa-user me-2"></i>Kullanıcı Adı
                                            </label>
                                            <input type="text" 
                                                   class="form-control" 
                                                   id="userName" 
                                                   name="userName" 
                                                   placeholder="Kullanıcı adınızı girin">
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Bu kullanıcı adı ile hesap oluşturulacak
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="email" class="form-label">
                                                <i class="fas fa-envelope me-2"></i>E-posta
                                            </label>
                                            <input type="email" 
                                                   class="form-control" 
                                                   id="email" 
                                                   name="email" 
                                                   placeholder="E-posta adresinizi girin">
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Hesap bilgileri için gerekli
                                            </div>
                                        </div>
                    <div class="mb-3">
                                            <label for="password" class="form-label">
                                                <i class="fas fa-lock me-2"></i>Şifre
                                            </label>
                                            <input type="password" 
                                                   class="form-control" 
                                                   id="password" 
                                                   name="password" 
                                                   placeholder="Şifrenizi girin">
                                            <div class="form-text">
                                                <i class="fas fa-info-circle me-1"></i>
                                                En az 6 karakter olmalı
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-success btn-lg" id="joinButton">
                                            <i class="fas fa-play me-2"></i>Oyuna Katıl
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-section">
                                <h5 class="text-success mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Nasıl Katılırım?
                                </h5>
                                <div class="info-steps">
                                    <div class="info-step d-flex align-items-start mb-3">
                                        <div class="step-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-1"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Oda Kodunu Alın</h6>
                                            <p class="text-muted mb-0 small">Oyun kurucusundan 6 karakterlik kodu alın</p>
                                        </div>
                                    </div>
                                    <div class="info-step d-flex align-items-start mb-3">
                                        <div class="step-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-2"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Katılım Yöntemini Seçin</h6>
                                            <p class="text-muted mb-0 small">Misafir olarak veya hesap oluşturarak katılın</p>
                                        </div>
                                    </div>
                                    <div class="info-step d-flex align-items-start mb-3">
                                        <div class="step-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-3"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Bilgilerinizi Girin</h6>
                                            <p class="text-muted mb-0 small">İsminizi veya hesap bilgilerinizi belirleyin</p>
                                        </div>
                                    </div>
                                    <div class="info-step d-flex align-items-start">
                                        <div class="step-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 30px; height: 30px; min-width: 30px;">
                                            <i class="fas fa-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-1">Oyuna Başlayın</h6>
                                            <p class="text-muted mb-0 small">Katıl butonuna basarak oyuna girin</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Katılım Yöntemleri Açıklaması -->
                                <div class="mt-4">
                                    <h6 class="text-success mb-3">
                                        <i class="fas fa-question-circle me-2"></i>Katılım Yöntemleri
                                    </h6>
                                    <div class="join-methods">
                                        <div class="method-item mb-2">
                                            <i class="fas fa-user-clock text-primary me-2"></i>
                                            <strong>Misafir Katılım:</strong> Hızlıca oyuna katılın, hesap oluşturmadan
                                        </div>
                                        <div class="method-item">
                                            <i class="fas fa-user-plus text-success me-2"></i>
                                            <strong>Hesap Oluştur:</strong> Kalıcı hesap oluşturup istatistiklerinizi kaydedin
                                        </div>
                                        <div class="method-item mt-2 p-2 bg-light rounded">
                                            <i class="fas fa-info-circle text-info me-2"></i>
                                            <small><strong>Not:</strong> Oyun kurmak için hesap oluşturmanız gereklidir.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-4 border-0 bg-light">
                <div class="card-body p-4">
                    <h5 class="text-center mb-3">
                        <i class="fas fa-lightbulb text-warning me-2"></i>Hızlı Başlangıç
                    </h5>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div class="quick-tip">
                                <i class="fas fa-mobile-alt text-primary fs-3 mb-2"></i>
                                <h6>Mobil Uyumlu</h6>
                                <p class="text-muted small">Telefonunuzdan da oynayabilirsiniz</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="quick-tip">
                                <i class="fas fa-bolt text-success fs-3 mb-2"></i>
                                <h6>Hızlı Bağlantı</h6>
                                <p class="text-muted small">Saniyeler içinde oyuna katılın</p>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="quick-tip">
                                <i class="fas fa-shield-alt text-info fs-3 mb-2"></i>
                                <h6>Güvenli Oyun</h6>
                                <p class="text-muted small">Özel odalar ile güvenle oynayın</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

<style>
.card {
    border-radius: 15px;
}

.card-header {
    border-radius: 15px 15px 0 0 !important;
}

.step-icon {
    font-size: 12px;
    font-weight: bold;
}

.info-step:hover .step-icon {
    transform: scale(1.1);
    transition: transform 0.2s ease;
}

.quick-tip {
    transition: transform 0.3s ease;
}

.quick-tip:hover {
    transform: translateY(-5px);
}

.form-control:focus {
    border-color: #198754;
    box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
}

.btn-success {
    background: linear-gradient(45deg, #198754, #146c43);
    border: none;
    transition: all 0.3s ease;
}

.btn-success:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(25, 135, 84, 0.3);
}

#roomCode {
    text-transform: uppercase;
}

#roomCode::placeholder {
    color: #6c757d;
    opacity: 0.5;
}
</style>

<script>
document.getElementById('roomCode').addEventListener('input', function(e) {
    this.value = this.value.toUpperCase();
});

document.getElementById('roomCode').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        document.querySelector('form').submit();
    }
});

// Katılım yöntemi değişikliği
document.querySelectorAll('input[name="joinMethod"]').forEach(radio => {
    radio.addEventListener('change', function() {
        const guestSection = document.getElementById('guestSection');
        const accountSection = document.getElementById('accountSection');
        const joinButton = document.getElementById('joinButton');
        
        if (this.value === 'guest') {
            guestSection.style.display = 'block';
            accountSection.style.display = 'none';
            joinButton.innerHTML = '<i class="fas fa-play me-2"></i>Misafir Olarak Katıl';
        } else {
            guestSection.style.display = 'none';
            accountSection.style.display = 'block';
            joinButton.innerHTML = '<i class="fas fa-user-plus me-2"></i>Hesap Oluştur ve Katıl';
        }
    });
});

// Form validation
document.getElementById('joinForm').addEventListener('submit', function(e) {
    const joinMethod = document.querySelector('input[name="joinMethod"]:checked').value;
    
    if (joinMethod === 'guest') {
        const playerName = document.getElementById('playerName').value.trim();
        if (!playerName) {
            e.preventDefault();
            alert('Misafir katılım için oyuncu adı gereklidir.');
            return false;
        }
    } else {
        const userName = document.getElementById('userName').value.trim();
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value;
        
        if (!userName || !email || !password) {
            e.preventDefault();
            alert('Hesap oluşturmak için tüm alanları doldurun.');
            return false;
        }
        
        if (password.length < 6) {
            e.preventDefault();
            alert('Şifre en az 6 karakter olmalıdır.');
            return false;
        }
    }
});
</script> 