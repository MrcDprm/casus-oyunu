@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

@if (TempData["LoginSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 1050; max-width: 400px;">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["LoginSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["RegisterSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 1050; max-width: 400px;">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["RegisterSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="hero-section text-center py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-primary mb-4">
                    🕵️ casusmusunnesin?
                </h1>
                <p class="lead mb-4">
                    Arkadaşlarınızla birlikte oynayabileceğiniz en eğlenceli sosyal dedüksiyon oyunu!
                </p>
                <div class="hero-features mb-4">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="feature-card p-3 bg-light rounded">
                                <i class="fas fa-users text-primary fs-4"></i>
                                <p class="mb-0 mt-2">Çok Oyunculu</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-card p-3 bg-light rounded">
                                <i class="fas fa-clock text-success fs-4"></i>
                                <p class="mb-0 mt-2">Hızlı Oyun</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-card p-3 bg-light rounded">
                                <i class="fas fa-mobile-alt text-info fs-4"></i>
                                <p class="mb-0 mt-2">Mobil Uyumlu</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="feature-card p-3 bg-light rounded">
                                <i class="fas fa-trophy text-warning fs-4"></i>
                                <p class="mb-0 mt-2">Turnuvalar</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="hero-buttons">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="@Url.Action("Create", "Room")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-play me-2"></i>Oyun Kur
                        </a>
                        <a href="@Url.Action("Join", "Room")" class="btn btn-outline-primary btn-lg mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Oyuna Katıl
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Join", "Room")" class="btn btn-primary btn-lg me-3 mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Oyuna Katıl
                        </a>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-success btn-lg me-3 mb-2">
                            <i class="fas fa-user-plus me-2"></i>Ücretsiz Kayıt Ol
                        </a>
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-success btn-lg mb-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </a>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="game-preview">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-4">
                            <h5 class="card-title text-center mb-4">
                                <i class="fas fa-gamepad text-primary"></i> Nasıl Oynanır?
                            </h5>
                            <div class="game-steps">
                                <div class="step-item d-flex align-items-center mb-3">
                                    <div class="step-number bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        1
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Oda Oluştur</h6>
                                        <p class="text-muted mb-0">Özel oda kodunuzu arkadaşlarınızla paylaşın</p>
                                    </div>
                                </div>
                                <div class="step-item d-flex align-items-center mb-3">
                                    <div class="step-number bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        2
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Kelimeleri Seç</h6>
                                        <p class="text-muted mb-0">Kategori ve kelimeleri belirleyin</p>
                                    </div>
                                </div>
                                <div class="step-item d-flex align-items-center mb-3">
                                    <div class="step-number bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        3
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Casusu Bul</h6>
                                        <p class="text-muted mb-0">Sorular sorarak casusu tespit edin</p>
                                    </div>
                                </div>
                                <div class="step-item d-flex align-items-center">
                                    <div class="step-number bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        4
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Oylama Yap</h6>
                                        <p class="text-muted mb-0">Casus olduğunu düşündüğünüz kişiyi oylayın</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="features-section py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Neden casusmusunnesin?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-box text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-bolt text-primary fs-1"></i>
                    </div>
                    <h5>Hızlı ve Kolay</h5>
                    <p class="text-muted">Sadece birkaç dakikada oyun kurun ve arkadaşlarınızla oynamaya başlayın.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-globe text-success fs-1"></i>
                    </div>
                    <h5>Her Yerden Erişim</h5>
                    <p class="text-muted">Mobil, tablet veya bilgisayarınızdan oynayın. İnternet bağlantısı yeterli!</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-box text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-shield-alt text-info fs-1"></i>
                    </div>
                    <h5>Güvenli Oyun</h5>
                    <p class="text-muted">Özel odalar ve güvenli bağlantılar ile güvenle oynayın.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="stats-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="text-primary fw-bold">1000+</h3>
                    <p class="text-muted">Aktif Oyuncu</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="text-success fw-bold">500+</h3>
                    <p class="text-muted">Günlük Oyun</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="text-info fw-bold">50+</h3>
                    <p class="text-muted">Kategori</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="text-warning fw-bold">24/7</h3>
                    <p class="text-muted">Kesintisiz Oyun</p>
                </div>
            </div>
        </div>
    </div>
</div>
