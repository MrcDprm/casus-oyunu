@{
    ViewBag.Title = "Oyun İstatistiklerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalGames = (int)ViewBag.TotalGames;
    var gamesWon = (int)ViewBag.GamesWon;
    var gamesLost = (int)ViewBag.GamesLost;
    var winRate = (double)ViewBag.WinRate;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="spy-bg p-4 rounded shadow-sm">
                <h2 class="spy-title mb-4">Oyun İstatistiklerim</h2>
                
                <div class="row">
                    <div class="col-md-3 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="text-primary">@totalGames</h3>
                                <p class="card-text">Toplam Oyun</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="text-success">@gamesWon</h3>
                                <p class="card-text">Kazanılan Oyun</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="text-danger">@gamesLost</h3>
                                <p class="card-text">Kaybedilen Oyun</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="text-warning">%@winRate.ToString("F1")</h3>
                                <p class="card-text">Kazanma Oranı</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (totalGames > 0)
                {
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Kazanma Oranı</h5>
                                </div>
                                <div class="card-body">
                                    <div class="progress mb-3">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: @winRate%" 
                                             aria-valuenow="@winRate" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            %@winRate.ToString("F1")
                                        </div>
                                    </div>
                                    <small class="text-muted">@gamesWon kazanma / @totalGames toplam oyun</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Oyun Dağılımı</h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="gameChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Performans Analizi</h5>
                                </div>
                                <div class="card-body">
                                    @if (winRate >= 70)
                                    {
                                        <div class="alert alert-success">
                                            <h6><i class="fas fa-star text-warning"></i> Mükemmel Performans!</h6>
                                            <p>Kazanma oranınız çok yüksek. Gerçek bir casus gibi oynuyorsunuz!</p>
                                        </div>
                                    }
                                    else if (winRate >= 50)
                                    {
                                        <div class="alert alert-info">
                                            <h6><i class="fas fa-thumbs-up text-info"></i> İyi Performans</h6>
                                            <p>Kazanma oranınız ortalamanın üzerinde. Daha da iyileştirebilirsiniz!</p>
                                        </div>
                                    }
                                    else if (winRate >= 30)
                                    {
                                        <div class="alert alert-warning">
                                            <h6><i class="fas fa-exclamation-triangle text-warning"></i> Orta Performans</h6>
                                            <p>Kazanma oranınız ortalama seviyede. Daha fazla pratik yaparak geliştirebilirsiniz.</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger">
                                            <h6><i class="fas fa-heart-broken text-danger"></i> Geliştirilmesi Gereken</h6>
                                            <p>Kazanma oranınız düşük. Stratejinizi gözden geçirmenizi öneririz.</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle"></i> Henüz Oyun Oynamadınız</h5>
                        <p>İstatistiklerinizi görmek için önce birkaç oyun oynamanız gerekiyor.</p>
                        <a href="@Url.Action("Create", "Room")" class="btn btn-primary">
                            <i class="fas fa-play me-2"></i>
                            İlk Oyununuzu Başlatın
                        </a>
                    </div>
                }

                <div class="row mt-4">
                    <div class="col-12">
                        <a href="@Url.Action("Index", "Premium")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Premium Sayfasına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (totalGames > 0)
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('gameChart').getContext('2d');
        const gameChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Kazanılan', 'Kaybedilen'],
                datasets: [{
                    data: [@gamesWon, @gamesLost],
                    backgroundColor: [
                        '#28a745',
                        '#dc3545'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
} 