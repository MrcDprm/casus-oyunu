@{
    ViewBag.Title = "Oyun İstatistikleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .stats-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
        }

        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            padding: 30px;
            margin-bottom: 30px;
        }

        .stat-item {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
        }

        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .win-rate {
            background: linear-gradient(45deg, #11998e, #38ef7d);
        }

        .total-games {
            background: linear-gradient(45deg, #667eea, #764ba2);
        }

        .games-won {
            background: linear-gradient(45deg, #11998e, #38ef7d);
        }

        .games-lost {
            background: linear-gradient(45deg, #ff416c, #ff4b2b);
        }

        .chart-container {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-top: 20px;
        }

        .progress-bar {
            height: 20px;
            border-radius: 10px;
            background: #e9ecef;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(45deg, #11998e, #38ef7d);
            transition: width 0.3s ease;
        }
    </style>
}

<div class="stats-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="stats-card">
                    <div class="text-center mb-4">
                        <i class="fas fa-chart-line text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3">Oyun İstatistikleri</h2>
                        <p class="text-muted">Oyun performansınızı takip edin</p>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="stat-item total-games">
                                <div class="stat-number">@ViewBag.TotalGames</div>
                                <div class="stat-label">Toplam Oyun</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item games-won">
                                <div class="stat-number">@ViewBag.GamesWon</div>
                                <div class="stat-label">Kazanılan</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item games-lost">
                                <div class="stat-number">@ViewBag.GamesLost</div>
                                <div class="stat-label">Kaybedilen</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="stat-item win-rate">
                                <div class="stat-number">%@ViewBag.WinRate.ToString("F1")</div>
                                <div class="stat-label">Kazanma Oranı</div>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.TotalGames > 0)
                    {
                        <div class="chart-container">
                            <h5 class="mb-3">Kazanma Oranı</h5>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @ViewBag.WinRate%"></div>
                            </div>
                            <div class="text-center mt-2">
                                <small class="text-muted">@ViewBag.GamesWon kazanma / @ViewBag.TotalGames toplam oyun</small>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-4">
                            <i class="fas fa-gamepad text-muted" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 text-muted">Henüz oyun oynamamışsınız</h4>
                            <p class="text-muted">İstatistiklerinizi görmek için oyun oynamaya başlayın!</p>
                            <a href="@Url.Action("Create", "Room")" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Oyun Kur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 