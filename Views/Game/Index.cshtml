@using casus_oyunu.Models
@{
    ViewBag.Title = "casusmusunnesin? - Eski Oyun Modu";
    var categories = ViewBag.Categories as List<casus_oyunu.Models.Category>;
    var selectedCategories = ViewBag.SelectedCategories as List<string> ?? new List<string>();
    var selectedWords = ViewBag.SelectedWords as List<string> ?? new List<string>();
    int gameDuration = ViewBag.GameDuration ?? 8;
    string error = ViewBag.Error as string;
}

<div class="spy-bg mt-3 p-3 p-md-4 rounded shadow-sm mx-auto" style="max-width: 800px;">
    <h2 class="text-center spy-title mb-4">🕵️ casusmusunnesin?</h2>
    
    <div class="alert alert-info text-center mb-4">
        <h4>⚠️ Eski Oyun Modu</h4>
        <p>Bu sayfa eski oyun modu için tasarlanmıştır. Yeni oyun sistemi için aşağıdaki butonları kullanın.</p>
    </div>
    
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <a href="@Url.Action("Create", "Room")" class="btn btn-primary btn-lg px-5 py-3 mb-3 w-100">
                🎮 Yeni Oyun Kur
            </a>
            <a href="@Url.Action("Join", "Room")" class="btn btn-success btn-lg px-5 py-3 mb-3 w-100">
                🎯 Oyuna Katıl
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg px-5 py-3 w-100">
                🏠 Ana Sayfa
            </a>
        </div>
    </div>
    
    <div class="mt-4">
        <h5>Yeni Oyun Sistemi Özellikleri:</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item spy-list">✅ Çoklu oyuncu desteği</li>
            <li class="list-group-item spy-list">✅ Gerçek zamanlı oyun</li>
            <li class="list-group-item spy-list">✅ Oda sistemi</li>
            <li class="list-group-item spy-list">✅ Güvenli oyun</li>
            <li class="list-group-item spy-list">✅ Veritabanı desteği</li>
        </ul>
    </div>
